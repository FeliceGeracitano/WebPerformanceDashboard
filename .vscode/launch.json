  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/packages/lighthouse/src/index.ts",
      "preLaunchTask": "lighthouse-build",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Inspector",
      "envFile": "${workspaceFolder}/packages/inspector/.env",
      "program": "${workspaceFolder}/packages/inspector/src/index.ts",
      "preLaunchTask": "inspector-build",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
