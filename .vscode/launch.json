  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Lighthouse",
      "envFile": "${workspaceFolder}/packages/inspector-lighthouse/.env",
      "program": "${workspaceFolder}/packages/inspector-lighthouse/src/index.ts",
      "preLaunchTask": "inspector-lighthouse-build",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch WPT",
      "envFile": "${workspaceFolder}/packages/inspector-wpt/.env",
      "program": "${workspaceFolder}/packages/inspector-wpt/src/index.ts",
      "preLaunchTask": "inspector-wpt-build",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
